                                                    <option value="">Select Unit</option>
                                                    <% item.forEach(dt=> { %>
                                                        <option value="<%= dt.sl_no %>">
                                                            <%= dt.unit_name %>
                                                        </option>
                                                        <% }) %>
                                                </select>
                                            </div>
                                        </td>
