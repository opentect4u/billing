<div class="container-fluid">
  <div class="row mt-5">
      <div class="col-md-12">
          <div class="card ml-5 mr-5">
              <div class="card-body">
                  <div class="titleSec">
                      <h2><i class="fa fa-caret-square-o-left"></i>
                          <b><span class="badge badge-light"
                                  style="border-radius: 8px;color: rgb(15, 15, 15); font-weight: 500; padding: 8px 15px;"><i class="fa fa-plus"></i>&nbsp;Add Item Stock</span></b></h2>
                                  <ul class="breadcrumb">
                                      <li><a href="/items/stock">Item Stock</a></li>&nbsp; / &nbsp;
                                      <li>Add Item Stock</li>
                                    </ul>
                        <form method="POST" action="/items/save_item_stock" class="">
                            <div class="row mt-4">
                                <div class="form-group col-md-6">
                                    <label for="item_name"><b style="color: black;">Item Name:</b></label>
                                    <input type="text" name="item_name" id="item_name" class="form-control" value="" required  />
                                    <input type="hidden" name="item_id" value="">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="item_id"><b style="color: black;">Item Name:</b></label>
                                    <select name="item_id" class="form-control s2id" id="item_id">
                                        <option value="">Select Item</option>
                                        <% item.forEach(dt => { %>
                                                <option value="<%= dt.item_id %>">
                                                    <%= dt.unit_name %>
                                                </option>
                                        <% }) %>
                                    </select>   
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="stock"><b style="color: black;">Stock:</b></label>
                                    <input type="text" name="stock" id="stock" class="form-control" value="0" readonly  />
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="form-group col-md-6">
                                    <label for="add_stock"><b style="color: black;">Add:</b></label>
                                    <input type="text" id="add_stock" class="form-control" value="0" />   
                                </div>
                  
                                <div class="form-group col-md-6">
                                    <label for="less_stock"><b style="color: black;">Less:</b></label>
                                    <input type="text" id="less_stock" class="form-control" value="0"
                                    required/>
                                </div>

                                <div class="form-group col-8 mt-3" style="margin-left: 29vw;">
                                    <button class="btn btn-warning" type="submit" value="SUBMIT" style="color: black;border-radius: 3px;font-weight: 500;">Submit</button>
                                </div>
                              
                          </div>
                      </form>
                  </div>
              </div>
          </div>
      </div>
  </div>
</div>

<script>
    $('#add_stock').on('change', function(){
        var stock = $('#stock').val()
        console.log(stock);
        $('#stock').val(parseInt(stock) + parseInt($(this).val()))
    })

    $('#less_stock').on('change', function(){
        var stock = $('#stock').val()
        if(stock > 0){
            $('#stock').val(parseInt(stock) - parseInt($(this).val()))
        }else{
            alert('Stock can not less than 0')
            $(this).val(0)
        }
    })
</script>