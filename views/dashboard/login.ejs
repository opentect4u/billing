<div class="auth-wrapper d-flex no-block justify-content-center align-items-center position-relative"
    style="background:url(images/big/storejpg.jpg);">
    <div class="auth-box row" style="border-style: solid; color: black;">
        <div class="col-lg-6 col-md-5 modal-sm-img"
            style="background-image: url(images/grocery/grocery.jpg); background-repeat: round;">
        </div>
        <div class="col-lg-6 col-md-7" style="background-color: antiquewhite;">
            <div class="p-3">
                <div class="text-center">
                    <img src="images/big/basket-transformed.png" alt="wrapkit" style="width: 10vw;">
                </div>
                <h2 class="mt-3 text-center" style="color: black;"><b>Sign In</b></h2>
                <!-- <p class="text-center">Enter your Email address and Password to access Admin panel.</p> -->
                <!-- <marquee style="font-size: 18px;">Grocery Shop</marquee> -->
                <form class="form" action="/admin/admin_login" method="post">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="text-dark" for="uname"><b>Username</b></label>
                                <input class="form-control" name="email_id" id="email_id" type="email"
                                    placeholder="enter your username" style="border-radius: 8px; font-size: 14px;">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="text-dark" for="pwd"><b>Password</b></label>
                                <input class="form-control" name="password" id="password" type="password"
                                    style="border-radius: 8px; font-size: 14px;" placeholder="enter your password">
                            </div>
                        </div>
                        <div class="col-lg-12 text-center mt-2">
                            <button type="submit" id="submit" class="btn btn-lg btn-dark" style="border-radius: 18px;"
                                disabled>Log
                                In</button>
                        </div>
                        <div class="col-lg-12 text-center mt-5">
                            <!-- Don't have an account? <a href="#" class="text-danger">Sign Up</a> -->
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Get the email and password input elements
        var emailInput = document.getElementById('email_id');
        var passwordInput = document.getElementById('password');
        var loginButton = document.getElementById('submit');

        // Add event listeners to the email and password input elements
        emailInput.addEventListener('input', toggleLoginButton);
        passwordInput.addEventListener('input', toggleLoginButton);

        // Function to toggle the login button based on input presence
        function toggleLoginButton() {
            loginButton.disabled = !(emailInput.value && passwordInput.value);
        }
    });
</script>